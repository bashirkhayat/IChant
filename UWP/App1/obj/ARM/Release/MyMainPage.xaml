<Page
    x:Class="App1.MyMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/HomeBackround.jpg"/>
        </Grid.Background>
        

        <StackPanel Orientation="Vertical">

            <TextBlock Text="User Name:" Margin="80,140,0,0" FontSize="15"/>
            <TextBox x:ConnectionId='1' x:Name="signInName" Margin="0,2,0,0" FontSize="20" Height="40" Width="200" HorizontalAlignment="Center" />
            <TextBlock Text="Password:" Margin="80,10,0,0" FontSize="15"/>
            <PasswordBox x:ConnectionId='2' x:Name="signInPassword" Margin="0,2,0,0" FontSize="20" Height="40" Width="200" HorizontalAlignment="Center" />
            <Button x:ConnectionId='3' x:Name="signIn" Content="Sign In" HorizontalAlignment="Center"  Height="34" Margin="0,10,0,0" Width="74"                           />
            <Button x:ConnectionId='4' x:Name="signUp" Content="Sign Up" HorizontalAlignment="Center" Height="34" Margin="0,10,0,0" Width="74"                           />

            <TextBlock x:ConnectionId='5' Name="tbError"
             FontSize="40" Margin="0,50,0,0"/>
        </StackPanel>


    </Grid>
</Page>

